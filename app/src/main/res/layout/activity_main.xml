                                        android:layout_width="78dp"
                                        android:layout_height="65dp"
                                        android:adjustViewBounds="true"
                                        android:background="#00FFFFFF"
                                        android:onClick="cambiarMano"
                                        android:scaleType="fitCenter"
                                        android:tint="#8BC34A"
