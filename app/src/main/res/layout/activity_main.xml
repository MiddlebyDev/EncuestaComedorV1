                                        android:layout_height="65dp"
                                        android:adjustViewBounds="true"
                                        android:background="#00FFFFFF"
                                        android:clickable="true"
                                        android:onClick="cambiarMano"
                                        android:scaleType="fitCenter"
                                        android:tint="#FF5722"
                                        app:srcCompat="@drawable/nolikeverde" />

                                </LinearLayout>

                                <Space
